<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_search_device_no_tips"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#FBF1E8"
        android:drawableStart="@drawable/injection_tips_no_bind"
        android:drawablePadding="7.5dp"
        android:gravity="center_vertical"
        android:paddingStart="15dp"
        android:text="没有搜索到蓝牙设备，点击重新搜索"
        android:textColor="#D08D3F"
        android:textSize="14sp"
        android:visibility="gone"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="500dp">

        <ImageView
            android:id="@+id/iv_search_device_gif"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/injection_device_search" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="126dp"
            android:src="@drawable/injection_device" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="设备搜索中..."
            android:textColor="#333333"
            android:textSize="20sp" />

    </FrameLayout>

</LinearLayout>