<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:background="@color/white">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:gravity="center"
               android:paddingLeft="20dp"
               android:text="日期"
               android:textColor="@color/black_text"
               android:textSize="17sp" />

           <TextView
               android:id="@+id/tv_data_add_date"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:drawableRight="@drawable/right_arrow"
               android:drawablePadding="15dp"
               android:gravity="right"
               android:paddingTop="25dp"
               android:paddingRight="20dp"
               android:paddingBottom="25dp"
               android:text="2020-10-25" />
       </LinearLayout>

       <View
           style="@style/line_grey_1"
           android:layout_marginStart="20dp"
           android:layout_marginEnd="20dp" />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:gravity="center"
               android:paddingLeft="20dp"
               android:text="时间"
               android:textColor="@color/black_text"
               android:textSize="17sp" />

           <TextView
               android:id="@+id/tv_data_add_time"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:drawableRight="@drawable/right_arrow"
               android:drawablePadding="15dp"
               android:gravity="right"
               android:paddingTop="25dp"
               android:paddingRight="20dp"
               android:paddingBottom="25dp"
               android:text="2020-10-25" />
       </LinearLayout>

       <View
           style="@style/line_grey_1"
           android:layout_marginStart="20dp"
           android:layout_marginEnd="20dp" />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:gravity="center"
               android:paddingLeft="20dp"
               android:text="注射单位"
               android:textColor="@color/black_text"
               android:textSize="17sp" />

           <TextView
               android:id="@+id/tv_data_add_unit"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:drawableRight="@drawable/right_arrow"
               android:drawablePadding="15dp"
               android:gravity="right"
               android:paddingTop="25dp"
               android:paddingRight="20dp"
               android:paddingBottom="25dp"
               android:text="2020-10-25" />
       </LinearLayout>

       <View
           style="@style/line_grey_1"
           android:layout_marginStart="20dp"
           android:layout_marginEnd="20dp" />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:gravity="center"
           android:paddingLeft="20dp"
           android:layout_marginTop="25dp"
           android:layout_marginBottom="25dp"
           android:text="选择注射类型"
           android:textColor="@color/black_text"
           android:textSize="17sp" />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:paddingLeft="20dp"
           android:paddingRight="20dp">

           <CheckBox
               android:id="@+id/cb_injection_one"
               style="@style/user_add_type"
               android:text="第一针" />

           <CheckBox
               android:id="@+id/cb_injection_two"
               style="@style/user_add_type"
               android:layout_marginStart="20dp"
               android:text="第二针" />

       </LinearLayout>


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="15dp"
           android:orientation="horizontal"
           android:paddingLeft="20dp"
           android:paddingRight="20dp">

           <CheckBox
               android:id="@+id/cb_injection_three"
               style="@style/user_add_type"
               android:text="第三针" />

           <CheckBox
               android:id="@+id/cb_injection_four"
               style="@style/user_add_type"
               android:layout_marginStart="20dp"
               android:text="第四针" />


       </LinearLayout>


   </LinearLayout>
</LinearLayout>