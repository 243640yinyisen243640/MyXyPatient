<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:text="日期"
                android:textColor="#333333"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_add_data_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="20dp"
                android:drawableEnd="@drawable/right_arrow"
                android:drawablePadding="15dp"
                android:gravity="center_vertical|right"
                android:text="2023/10/18"
                android:textColor="#333333"
                android:textSize="17sp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="#F0F0F0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:text="时间"
                android:textColor="#333333"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_add_data_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="20dp"
                android:drawableEnd="@drawable/right_arrow"
                android:drawablePadding="15dp"
                android:gravity="center_vertical|right"
                android:text="11:34"
                android:textColor="#333333"
                android:textSize="17sp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="#F0F0F0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:text="注射单位"
                android:textColor="#333333"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_add_data_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="20dp"
                android:drawableEnd="@drawable/right_arrow"
                android:drawablePadding="15dp"
                android:gravity="center_vertical|right"
                android:text="15单位"
                android:textColor="#333333"
                android:textSize="17sp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="#F0F0F0" />

        <LinearLayout
            android:id="@+id/ll_add_data_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:text="选择注射类型"
                android:textColor="#333333"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_add_type_1"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_weight="1"
                    android:background="@drawable/_shape_can_check"
                    android:gravity="center"
                    android:text="第一针"
                    android:textColor="#545454"
                    android:textSize="15sp" />

                <View
                    android:layout_width="20dp"
                    android:layout_height="42dp"
                    android:background="@color/transparent"/>

                <TextView
                    android:id="@+id/tv_add_type_2"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_weight="1"
                    android:background="#4D0CA25B"
                    android:gravity="center"
                    android:text="第二针"
                    android:textColor="#0CA25B"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_add_type_3"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_weight="1"
                    android:background="@drawable/_shape_can_check"
                    android:gravity="center"
                    android:text="第三针"
                    android:textColor="#545454"
                    android:textSize="15sp" />

                <View
                    android:layout_width="20dp"
                    android:layout_height="42dp"
                    android:background="@color/transparent"/>

                <TextView
                    android:id="@+id/tv_add_type_4"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_weight="1"
                    android:background="@drawable/_shape_no_can_check"
                    android:gravity="center"
                    android:text="第四针"
                    android:textColor="#9D9D9D"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="bottom"
      android:orientation="vertical">

      <TextView
          android:id="@+id/tv_add_confirm"
          android:layout_width="match_parent"
          android:layout_height="42dp"
          android:textSize="18sp"
          android:textColor="@color/white"
          android:text="确认"
          android:background="@drawable/_shape_confirm"
          android:layout_marginBottom="35dp"
          android:gravity="center"
          android:layout_marginStart="25dp"
          android:layout_marginEnd="25dp"/>

  </LinearLayout>
</LinearLayout>
