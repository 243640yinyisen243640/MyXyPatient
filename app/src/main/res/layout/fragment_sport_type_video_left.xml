<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        style="@style/scrollView"
        android:layout_above="@+id/bt_begin_exercise">

        <LinearLayout
            style="@style/hh_fi_wr"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_bg"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sport_bg_taiji" />


            <LinearLayout
                style="@style/hh_fi_wr"
                android:layout_margin="@dimen/dp_18"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_sport_type"
                    style="@style/text_black_14_f_w"
                    android:layout_weight="1"
                    android:text="跳绳"
                    android:textSize="20sp" />


                <TextView
                    android:id="@+id/tv_sport_time"
                    style="@style/text_black_14_f_w"
                    android:layout_weight="1"
                    android:text="时长：00:00:00"
                    android:textColor="#343434" />

                <TextView
                    android:id="@+id/tv_sport_kcal"
                    style="@style/text_black_14_f_w"
                    android:layout_weight="1"
                    android:text="消耗:54千卡"
                    android:textColor="#343434" />


            </LinearLayout>


            <TextView
                android:id="@+id/tv_sport_desc"
                style="@style/text_black_14_f_w"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:lineSpacingMultiplier="1.2"
                android:textColor="#343434" />

            <TextView
                android:id="@+id/tv_sport_warning"
                style="@style/text_black_14_w_w"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:lineSpacingMultiplier="1.2"
                android:visibility="gone"
                android:textColor="#343434" />

        </LinearLayout>
    </ScrollView>


    <com.wei.android.lib.colorview.view.ColorButton
        android:id="@+id/bt_begin_exercise"
        style="@style/text_white_16_w_w"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        android:paddingLeft="100dp"
        android:paddingRight="100dp"
        android:text="开始运动"
        app:backgroundColorNormal="@color/main_home"
        app:cornerRadiusNormal="90dp" />


</RelativeLayout>