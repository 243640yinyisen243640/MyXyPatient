<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_15">

        <TextView
            android:id="@+id/tv_time_temperature"
            style="@style/text_black_14_w_w"
            android:layout_centerVertical="true"
            android:textSize="15sp"/>


        <LinearLayout
            style="@style/hh_wr_wr"
            android:layout_marginRight="28dp"
            android:layout_toLeftOf="@+id/ll_type_right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_value_temperature"
                style="@style/text_black_14_w_w"
                android:layout_marginRight="@dimen/dp_5"
                android:textSize="15sp"
                android:textColor="#3B4552" />

            <TextView
                style="@style/text_gray_12_w_w"
                android:textSize="15sp"
                android:text="@string/temperature_default_code" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_type_right"
            style="@style/hh_wr_wr"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_type_temperature"
                style="@style/text_gray_14_w_w"
                android:gravity="right"
                android:text="手动上传"
                android:textColor="@color/new_black_text"
                android:textSize="13sp" />
        </LinearLayout>


    </RelativeLayout>

    <View style="@style/line" />


</LinearLayout>
