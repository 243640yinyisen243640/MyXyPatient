<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_insulin_ble_tips"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#FBF1E8"
        android:drawableStart="@drawable/injection_tips_no_bind"
        android:drawablePadding="7.5dp"
        android:gravity="center_vertical"
        android:paddingStart="25dp"
        android:text="请确保蓝牙以及扫描权限开启"
        android:textColor="#D08D3F"
        android:textSize="14sp"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/fl_insulin_choose_bg_first"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_green_tran_12_5"
            android:paddingTop="10dp"
            android:paddingBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/insulin_device_aad_device" />

                <TextView
                    android:id="@+id/tv_insulin_choose_content_first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="迈世通胰岛素泵"
                    android:textColor="@color/main_green"
                    android:textSize="14sp" />


            </LinearLayout>

            <CheckBox
                android:id="@+id/cb_insulin_choose_check_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginEnd="10dp"
                android:background="@drawable/insulin_device_aad_check"
                android:button="@null" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_insulin_choose_bg_second"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:background="@drawable/shape_grey_f8_5"
            android:paddingTop="10dp"
            android:paddingBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/insulin_device_aad_device" />

                <TextView
                    android:id="@+id/tv_insulin_choose_content_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="凯联胰岛素泵"
                    android:textColor="@color/black_text"
                    android:textSize="14sp" />


            </LinearLayout>

            <CheckBox
                android:id="@+id/cb_insulin_choose_check_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginEnd="10dp"
                android:background="@drawable/insulin_device_aad_check"
                android:button="@null"
                android:visibility="gone" />
        </FrameLayout>
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tv_insulin_choose_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="@drawable/shape_bg_main_green_90"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="15sp" />

</LinearLayout>