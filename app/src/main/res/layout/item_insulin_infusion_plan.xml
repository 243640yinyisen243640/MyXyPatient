<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_insulin_add_device_click"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_insulin_infusion_plan_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">

        <TextView
            android:id="@+id/tv_insulin_infusion_plan_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2023-11-06"
            android:textColor="@color/black_text"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_insulin_infusion_plan_values"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/right_arrow"
            android:drawablePadding="10dp"
            android:text="5.40U"
            android:textColor="@color/black_text"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        style="@style/line_grey_1"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp" />


</LinearLayout>