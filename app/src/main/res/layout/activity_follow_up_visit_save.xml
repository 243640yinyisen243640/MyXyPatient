<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"
        android:layout_marginTop="25dp"
        android:src="@drawable/follow_up_visit_bg" />

    <ImageView
        android:id="@+id/img_dismiss"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_gravity="right"
        android:layout_marginTop="-11dp"
        android:layout_marginRight="-11dp"
        android:scaleType="centerCrop"
        android:visibility="gone"
        android:src="@drawable/follow_up_visit_x" />


    <LinearLayout
        style="@style/hh_fi_wr"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_content_top"
            style="@style/text_black_14_w_w"
            android:textSize="25sp"
            android:layout_marginTop="30dp"
            android:text="您还未完成随访问卷填写" />

        <TextView
            android:id="@+id/tv_content_bottom"
            style="@style/text_black_14_w_w"
            android:layout_marginTop="@dimen/dp_10"
            android:text="是否保存"
            android:visibility="gone"/>

    </LinearLayout>

   <TextView
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="1"/>
    <com.wei.android.lib.colorview.view.ColorTextView
        android:id="@+id/tv_follow_save"
        style="@style/text_white_16_w_w"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:paddingTop="@dimen/dp_15"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_15"
        android:text="保存草稿"
        app:backgroundColorNormal="@color/main_home"
        app:cornerRadiusNormal="90dp" />

    <TextView
        android:id="@+id/tv_follow_give_up"
        style="@style/text_white_16_w_w"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/shape_white_green_90"
        android:padding="@dimen/dp_15"
        android:textColor="@color/main_green"
        android:text="放弃" />



</LinearLayout>