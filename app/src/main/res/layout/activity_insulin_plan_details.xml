<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_details_large_dose"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_infusion_large_dose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableBottom="@drawable/shape_green_30_3_2"
                android:drawablePadding="12dp"
                android:gravity="center"
                android:paddingTop="15dp"
                android:text="大剂量"
                android:textColor="#00C27F"
                android:textSize="17sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_details_big_dose_num"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="-5dp"
                android:background="@drawable/shape_red_ff281f_90"
                android:gravity="center"
                android:text="99+"
                android:textColor="@color/white_text"
                android:textSize="13sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_details_basal_rate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_infusion_basal_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="12dp"
                android:gravity="center"
                android:paddingTop="15dp"
                android:text="基础率"
                android:textColor="#00C27F"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_details_base_rate_num"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="-5dp"
                android:background="@drawable/shape_red_ff281f_90"
                android:gravity="center"
                android:text="99+"
                android:textColor="@color/white_text"
                android:textSize="13sp" />
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F4F4F4" />

    <com.vice.bloodpressure.view.CustomViewPager
        android:id="@+id/vp_insulin_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>