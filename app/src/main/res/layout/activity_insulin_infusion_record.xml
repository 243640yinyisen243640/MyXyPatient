<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="17dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_infusion_device_manage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/shape_white_green_90"
            android:drawableLeft="@drawable/infusion_recoed_device_manage"
            android:drawablePadding="4dp"
            android:paddingStart="12dp"
            android:paddingTop="10dp"
            android:paddingEnd="12dp"
            android:paddingBottom="10dp"
            android:text="设备管理"
            android:textColor="#00C17E"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_infusion_base_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/shape_white_green_90"
            android:drawableLeft="@drawable/infusion_recoed_base_mode"
            android:drawablePadding="4dp"
            android:paddingStart="12dp"
            android:paddingTop="10dp"
            android:paddingEnd="12dp"
            android:paddingBottom="10dp"
            android:text="基础模式"
            android:textColor="#00C17E"
            android:textSize="13sp"
            android:visibility="visible" />

        <FrameLayout
            android:id="@+id/fl_infusion_plan_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:visibility="visible">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/shape_white_green_90"
                android:drawableLeft="@drawable/infusion_recoed_plan"
                android:drawablePadding="4dp"
                android:paddingStart="12dp"
                android:paddingTop="10dp"
                android:paddingEnd="12dp"
                android:paddingBottom="10dp"
                android:text="输注方案"
                android:textColor="#00C17E"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_infusion_plan_num"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_gravity="right|top"
                android:background="@drawable/shape_red_ff281f_90"
                android:gravity="center"
                android:text="99+"
                android:textColor="@color/white_text"
                android:textSize="13sp"
                android:visibility="visible" />
        </FrameLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F4F4F4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="基本信息"
            android:textColor="@color/black_text"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_infusion_base_ble_tips"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:drawableStart="@drawable/injection_tips_no_bind"
            android:drawablePadding="7dp"
            android:gravity="center_vertical"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textColor="#D08D3F"
            android:textSize="14sp"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_infusion_info_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:src="@drawable/insulin_refresh_green"
            android:visibility="visible" />

        <com.vice.bloodpressure.view.LoadingImageView
            android:id="@+id/iv_infusion_info_refresh_trends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/shape_grey_f4_90"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_infusion_info_day_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_bg_main_green_90"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="日总量"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_infusion_info_big"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="大剂量"
            android:textColor="@color/color_666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_infusion_info_base_rate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="基础率"
            android:textColor="@color/color_666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_infusion_info_warning"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="报警"
            android:textColor="@color/color_666"
            android:textSize="14sp" />


    </LinearLayout>


    <ListView
        android:id="@+id/lv_insulin_base_info_list"
        style="@style/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_insulin_infusion_last"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible">

        <View
            android:layout_width="15dp"
            android:layout_height="1dp"
            android:background="#F0F0F0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="已经到底啦"
            android:textColor="@color/green_text_666"
            android:textSize="14sp" />

        <View
            android:layout_width="15dp"
            android:layout_height="1dp"
            android:layout_marginStart="8dp"
            android:background="#F0F0F0" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_insulin_base_info_no_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:drawableTop="@drawable/insulin_add_device_no_data"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:paddingBottom="50dp"
        android:text="暂无数据"
        android:textColor="@color/green_text_666"
        android:textSize="14sp" />


</LinearLayout>